/dts-v1/;

&mdss0_dsi0 {

	status = "okay";
	vdda-supply = <&vreg_l3b>;

	qcom,dual-dsi-mode;
	qcom,master-dsi;
	qcom,sync-dual-dsi;

	panel@0 {
		compatible = "himax,hx83121a";
		reg = <0>;

		reset-gpios = <&tlmm 38 GPIO_ACTIVE_LOW>;

		pinctrl-0 = <&disp_reset_n>;
		pinctrl-names = "default";

		vddio-supply = <&vreg_l2b>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;
				panel_in_0: endpoint {
					remote-endpoint = <&mdss0_dsi0_out>;
				};
			};

			port@1 {
				reg = <1>;
				panel_in_1: endpoint {
					remote-endpoint = <&mdss0_dsi1_out>;
				};
			};

		};
	};
};

&mdss0_dsi0_out {
	data-lanes = <0 1 2 3>;
	remote-endpoint = <&panel_in_0>;
};

&mdss0_dsi0_phy {
	status = "okay";
	vdds-supply = <&vreg_l6b>;
};

&mdss0_dsi1 {
	status = "okay";
	vdda-supply = <&vreg_l3b>;

	qcom,dual-dsi-mode;
	qcom,sync-dual-dsi;

};

&mdss0_dsi1_out {
	data-lanes = <0 1 2 3>;
	remote-endpoint = <&panel_in_1>;
};

&mdss0_dsi1_phy {
	status = "okay";
	vdds-supply = <&vreg_l6b>;
};

&mdss0 {
	status = "okay";
};

&mdss0_dp0 {
	status = "okay";
};

&mdss0_dp0_out {
	data-lanes = <0 1 2 3>;
	remote-endpoint = <&usb_0_qmpphy_dp_in>;
};

&mdss0_dp1 {
	status = "okay";
};

&mdss0_dp1_out {
	data-lanes = <0 1 2 3>;
	remote-endpoint = <&usb_1_qmpphy_dp_in>;
};
